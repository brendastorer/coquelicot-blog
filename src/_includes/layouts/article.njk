---
layout: page
---

<article class="article article--{{ page.fileSlug }} space--mb--large container--page">
  <header class="space--mb--small align--text-center">
    <p class="space--mb--small copy--mono">
      <time>{{ date | readableDate }}</time>
    </p>
    <h1 class="type--heading title--large space--mb--small">
      {{ title }}
    </h1>
  </header>
  <section class="article__container">
    <div class="article__content">
      {{ content | safe }}
    </div>
    <footer class="article__footer space--mt--large">
      {% include "components/socialShare.njk" %}
      <div class="flex flex--align-center space--gap--small">
        <span class="copy--semibold line-height--short copy--small">
          More articles:
        </span>
        {% set categories =  collections.categoryList %}
        <ul class="list--unstyled flex space--gap--small space--m--unset">
          <li>
            <a class="button button--tag button--secondary" href="/blog">
              all
            </a>
          </li>
          {%- for category in categories %}
          {% set catUrl = ["/blog/", category.key, "/" ] |  join %}
          <li>
            <a href="{{ catUrl }}" class="button button--tag button--secondary">
              {{ category.name }}
            </a>
          </li>
          {%- endfor -%}
        </ul>
      </div>
    </footer>
  </section>
</article>
<script src="{{ '/assets/javascript/social-share.js' | url }}"></script>